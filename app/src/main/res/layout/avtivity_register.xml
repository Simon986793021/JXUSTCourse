<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_common_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_registerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/input_bg"
        android:orientation="vertical">
        <include layout="@layout/view_line"/>
        <com.jxust.excellentcourse.view.ClearableEditText
            android:id="@+id/et_nickname_register"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:drawableLeft="@drawable/login_user"
            android:drawablePadding="25dip"
            android:hint="请输入昵称..."
            android:inputType="text"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="@color/black"
            android:textColorHint="#ffdddddd" />

        <include layout="@layout/view_line"/>
        <com.jxust.excellentcourse.view.ClearableEditText
            android:id="@+id/et_username_register"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:drawableLeft="@drawable/login_user"
            android:drawablePadding="25dip"
            android:hint="请输入手机号码..."
            android:inputType="phone"
            android:maxLength="13"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="@color/black"
            android:textColorHint="#ffdddddd" />

        <include layout="@layout/view_line"/>

        <com.jxust.excellentcourse.view.ClearableEditText
            android:id="@+id/et_password_register"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:drawableLeft="@drawable/login_psd"
            android:drawablePadding="25dip"
            android:hint="请输入密码..."
            android:inputType="textPassword"
            android:paddingLeft="15dip"
            android:textColor="@color/black"
            android:textColorHint="#ffdddddd" />

        <include layout="@layout/view_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

    <com.jxust.excellentcourse.view.PasswordInputView
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:padding="0dp"
        android:visibility="gone"
        custom:passwordColor="@color/black"
        custom:passwordLength="6"
        custom:passwordWidth="10dp"  />



        <Spinner
            android:id="@+id/sp_select_hobby"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:spinnerMode="dialog"
            android:layout_height="50dp" />


    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>